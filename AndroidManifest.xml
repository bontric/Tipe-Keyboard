<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.bontric.DoubleTab"
      android:versionCode="1"
      xmlns:android="http://schemas.android.com/apk/res/android" android:versionName="0.1">
    <uses-sdk android:minSdkVersion="19" />

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <service android:permission="android.permission.BIND_INPUT_METHOD" 
            android:name="com.bontric.DoubleTabKeyboard.SoftKeyboard" 
            android:description="@string/app_name">
            <intent-filter>
                <action android:name="android.view.InputMethod"></action>
            </intent-filter>
            <meta-data android:resource="@xml/method" android:name="android.view.im"></meta-data>
        </service>
           <!-- Optional: an activity for controlling the IME settings -->
    <activity android:name="com.bontric.DtSettings.DtSettingsMain" 
        android:label="DT Settings">
        <intent-filter>
            <action android:name="android.intent.action.MAIN"/>
        </intent-filter>
    </activity>
    </application>
</manifest>